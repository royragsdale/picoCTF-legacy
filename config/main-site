server {
        server_name picoctf.com;
        listen       80;
        root   /srv/http/main-site;

        location = / {
                default_type text/html;
                index  index.html;
        }
        location ~ ^/(account|problems|about|news|feedback|irc|login|logout|passreset|teamnamelookup|contact|learn|compete|faq|teachers|registration|webshell|sponsors|scoreboard)$ {
                default_type text/html;
                alias /srv/http/main-site/$1.html;
        }
        location ~ /api/ {
                proxy_pass http://localhost:8000;
                proxy_set_header  X-Real-IP  $remote_addr;
                proxy_redirect off;
        }

}
